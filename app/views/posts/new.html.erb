<div class="container">
  <%= form_for @post, url: {action: :create} do |f| %>
      <div>
        <h3>Add a Post</h3>
      </div>
      <div>
        <p>
          <%= "<div>#{@post.errors.full_messages.first}</div>".html_safe if @post.errors.any? %>
        <div>
            <label>Title</label>
              <%= f.text_field :title %>
        </div>

        <div>
           <label>Description</label>
              <%= f.text_area :description, class: 'ckeditor form-control' %>
        </div>
		 </p>
      </div>
      <div>
        <%= link_to 'Back', { controller: 'posts', action: 'index'} %>
        <%= f.submit 'Create Post' %>
      </div>
  <% end %>
</div>