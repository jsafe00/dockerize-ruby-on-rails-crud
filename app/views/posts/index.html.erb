<!DOCTYPE html>
<html>
<body>
 <div class="container">
    <h3>Post</h3>
   
      <div>
        <%= link_to 'Add Post', new_post_path %>
      </div>
      <br>
    <table border="2">
      <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= truncate(post.description, :length => 75) %></td>
               <div>
               <td>
                <%= link_to 'Show', post_path(post) %>
                <%= link_to 'Edit', edit_post_path(post) %>
                <%= link_to 'Delete', post_path(post), method: :delete %>
              </div>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    </div>
  </body>
</html>